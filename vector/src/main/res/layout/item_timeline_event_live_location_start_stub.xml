<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <!-- ShapeableImageView positioned at the top -->
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/liveLocationStartMap"
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:contentDescription="@string/a11y_static_map_image"
        android:src="@drawable/bg_no_location_map"
        app:shapeAppearanceOverlay="@style/CustomImageViewShape"
        android:scaleType="centerCrop"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <!-- Live location start banner overlaid at the bottom of the map -->
    <ImageView
        android:id="@+id/liveLocationStartBanner"
        android:layout_width="250dp"
        android:layout_height="48dp"
        android:alpha="0.75"
        android:src="?android:colorBackground"
        android:layout_alignBottom="@id/liveLocationStartMap"
        android:layout_alignStart="@id/liveLocationStartMap"
        android:layout_alignEnd="@id/liveLocationStartMap"
        tools:ignore="ContentDescription" />

    <!-- Icon on the banner (left aligned) -->
    <ImageView
        android:id="@+id/liveLocationStartIcon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginVertical="8dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/circle"
        android:backgroundTint="?vctr_content_quaternary"
        android:padding="3dp"
        android:layout_alignTop="@id/liveLocationStartBanner"
        android:layout_alignBottom="@id/liveLocationStartBanner"
        android:layout_alignStart="@id/liveLocationStartBanner"
        app:srcCompat="@drawable/ic_attachment_live_location_white"
        app:tint="?android:colorBackground"
        tools:ignore="ContentDescription" />

    <!-- TextView for the live location title (right of the icon) -->
    <TextView
        android:id="@+id/liveLocationStartTitle"
        style="@style/Widget.Vector.TextView.Caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:lines="1"
        android:ellipsize="end"
        android:text="@string/location_share_live_started"
        android:textColor="?vctr_content_tertiary"
        android:layout_toEndOf="@id/liveLocationStartIcon"
        android:layout_alignTop="@id/liveLocationStartBanner"
        android:layout_alignBottom="@id/liveLocationStartBanner" />

    <!-- ProgressBar in the center of the map -->
    <ProgressBar
        android:id="@+id/liveLocationStartLoader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminateTint="?vctr_content_quaternary"
        android:layout_centerInParent="true" />

</RelativeLayout>
