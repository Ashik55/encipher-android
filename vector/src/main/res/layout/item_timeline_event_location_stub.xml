<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <!-- ShapeableImageView positioned at the top -->
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/staticMapImageView"
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:contentDescription="@string/a11y_static_map_image"
        android:scaleType="centerCrop"
        app:shapeAppearanceOverlay="@style/CustomImageViewShape"
        android:layout_centerHorizontal="true"
        tools:src="@tools:sample/backgrounds/scenic" />

    <!-- Pin ImageView centered on top of ShapeableImageView -->
    <ImageView
        android:id="@+id/staticMapPinImageView"
        android:layout_width="51dp"
        android:layout_height="55dp"
        android:layout_above="@+id/liveLocationRunningBanner"
        android:layout_alignStart="@+id/staticMapImageView"
        android:layout_alignEnd="@+id/staticMapImageView"
        android:layout_alignParentTop="true"
        android:layout_marginTop="65dp"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"
        android:importantForAccessibility="no"
        android:src="@drawable/bg_map_user_pin" />

    <!-- Map Loading Error View overlaid on top of the ShapeableImageView -->
    <im.vector.app.features.location.MapLoadingErrorView
        android:id="@+id/staticMapLoadingError"
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:visibility="gone"
        android:layout_below="@id/staticMapImageView"
        android:layout_centerHorizontal="true"
        app:mapErrorDescription="@string/location_timeline_failed_to_load_map" />

    <!-- Live Location Running Banner at the bottom of ShapeableImageView -->
    <im.vector.app.features.location.live.LiveLocationRunningBannerView
        android:id="@+id/liveLocationRunningBanner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/staticMapImageView"
        android:layout_alignEnd="@+id/staticMapImageView"
        android:layout_alignBottom="@id/staticMapImageView"
        android:visibility="gone"
        tools:visibility="visible" />

    <!-- Static map copyright TextView positioned at the top left -->
    <TextView
        android:id="@+id/staticMapCopyrightTextView"
        style="@style/Widget.Vector.TextView.Nano.Copyright"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/staticMapImageView"
        android:layout_alignEnd="@+id/staticMapImageView"
        android:layout_alignParentTop="true"
        android:layout_margin="8dp"
        android:layout_marginStart="-65dp"
        android:layout_marginEnd="161dp"
        android:text="@string/location_map_view_copyright" />

</RelativeLayout>
