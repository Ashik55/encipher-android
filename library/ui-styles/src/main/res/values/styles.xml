<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="VectorEmptyImageView">
        <item name="android:visibility">visible</item>
    </style>

    <style name="CustomImageViewShape" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">24dp</item>
    </style>

    <!-- Define a custom style for the form switch title -->
    <style name="CustomFormSwitchTitle">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/helvetica_neue_lt_std_75_bold</item>
    </style>

    <!-- Define a custom style for the form switch summary -->
    <style name="CustomFormSwitchSummary">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/helvetica_neue_lt_std_55_roman</item>
    </style>

    <style name="CircleImageViewStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

</resources>
